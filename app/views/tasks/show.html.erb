<h2><%= @task.title %></h2>
<div class="border">
  <p><%=@task.details %></p>
  <p>Completed: <%= @task.completed %></p>
</div>
<%= link_to "Edit task", edit_task_path, class: "btn btn-primary"%>

<%= link_to "Tasks list", tasks_path, class: "btn btn-primary"%>

<%= link_to "Delete Task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"
%>
