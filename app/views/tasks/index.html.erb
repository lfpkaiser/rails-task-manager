<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%=link_to task.title, task_path(task)%> - completed: <%=task.completed%> <%= link_to "Delete Task",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},  class: "btn btn-danger"
%></li>
  <% end %>
</ul>



<%= link_to "Create new task", new_task_path, class: "btn btn-primary" %>
